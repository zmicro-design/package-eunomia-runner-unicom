#!/bin/bash

set -e

help() {
  echo "Usage:"
  echo "  zmicro package install eunomia-runner-unicom <args...>"
  echo ""
}

install() {
  local arch="$(os::arch)"
  local os="linux"
  local bin_path=/usr/bin

  if [ "$(os::is_macos)" = "true" ]; then
    os="darwin"
    bin_path=/usr/local/bin
  fi

  local name="eunomia-runner-unicom"

  local tmp_file=/tmp/$name.tar.gz
  local url="http://10.27.249.150:8888/eunomia/shared/raw/master/$name/$name-${os}-${arch}.tgz"
  curl -fSL $url -o $tmp_file

  cd /tmp
  tar -zxvf $tmp_file >>/dev/null 2>&1

  sudo mv bin/$name-${os}-${arch} $bin_path/$name

  rm -rf $tmp_file
}

core() {
  if [ "$1" = "-h" ] || [ "$1" = "--help" ]; then
    help
    exit 0
  fi

  install
  log::success "install eunomia-runner-unicom success."
}

run() {
  core $@
}

run $@
